<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="100"
        motion:motionInterpolator="cubic(0.4,0.21,0.8,0.8)"
        motion:pathMotionArc="flip">
       <KeyFrameSet>
           <KeyPosition
               motion:motionTarget="@+id/equal"
               motion:framePosition="38"
               motion:keyPositionType="pathRelative" />
           <KeyTimeCycle
               motion:motionTarget="@+id/btnclr"
               motion:framePosition="64"
               motion:wavePeriod="1.2"
               android:elevation="3dp"
               motion:waveOffset="3dp" />
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/equal" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/equal"
            android:layout_width="111sp"
            android:layout_height="39sp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            motion:layout_constraintEnd_toStartOf="@+id/quantity"
            motion:layout_constraintStart_toEndOf="@+id/money"
            android:layout_marginBottom="2dp"
            motion:layout_constraintBottom_toTopOf="@+id/equal2"
            motion:layout_constraintTop_toBottomOf="@+id/rate"
            android:layout_marginRight="8dp" />
        <Constraint
            android:id="@+id/equal2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="111dp"
            android:layout_height="39dp"
            android:layout_marginBottom="23dp"
            motion:layout_constraintBottom_toTopOf="@+id/btn2"
            motion:layout_constraintTop_toBottomOf="@+id/equal"
            motion:layout_constraintHorizontal_bias="0.493"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="3dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/equal"
            android:layout_width="111sp"
            android:layout_height="39sp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            motion:layout_constraintEnd_toStartOf="@+id/quantity"
            motion:layout_constraintStart_toEndOf="@+id/money"
            android:layout_marginBottom="2dp"
            motion:layout_constraintBottom_toTopOf="@+id/equal2"
            motion:layout_constraintTop_toBottomOf="@+id/rate"
            android:layout_marginRight="8dp" />
        <Constraint
            android:id="@+id/equal2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="111dp"
            android:layout_height="39dp"
            android:layout_marginBottom="23dp"
            motion:layout_constraintBottom_toTopOf="@+id/btn2"
            motion:layout_constraintTop_toBottomOf="@+id/equal"
            motion:layout_constraintHorizontal_bias="0.493"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="3dp" />
    </ConstraintSet>
</MotionScene>